# Development Environment Configuration
# Copy to .env in backend directory and customize as needed

# === Application Settings ===
ENVIRONMENT=development
DEBUG=true

# === Database ===
# SQLite (easiest for development)
DATABASE_URL=sqlite:///./app.db

# PostgreSQL (if you prefer)
# DATABASE_URL=postgresql://user:password@localhost:5432/tectonic_trading_dev

# === Server Configuration ===
API_HOST=0.0.0.0
API_PORT=8000
RELOAD=true

# === Security ===
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-dev-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# === CORS Configuration ===
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# === Market Data APIs ===

# Alpha Vantage (US Stocks) - Get free key at https://www.alphavantage.co/
ALPHA_VANTAGE_API_KEY=demo

# Finnhub (Multiple assets) - Get free key at https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_key_here

# CoinGecko (Crypto) - Free API, no key needed
COINGECKO_API_KEY=

# Polygon.io (Alternative stocks) - Get key at https://polygon.io/
POLYGON_API_KEY=

# === AI/LLM Configuration ===

# Anthropic Claude API - Get key at https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# === Email Configuration (for alerts/notifications) ===
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@example.com

# === Cache Configuration ===
# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=false

# === Logging ===
LOG_LEVEL=DEBUG
LOG_FILE=app.log

# === Feature Flags ===
ENABLE_AI_VALIDATION=true
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=false

# === Trading Parameters ===
MAX_POSITION_SIZE=0.20
MAX_DAILY_LOSS_PERCENT=0.10
MIN_RISK_REWARD_RATIO=1.5

# === Validation Gate Thresholds ===
QUOTE_FRESHNESS_MAX_MINUTES=5
PRICE_DEVIATION_MAX_PERCENT=2.0
VOLATILITY_THRESHOLD_PERCENT=3.0
LIQUIDITY_MIN_DAILY_VOLUME=100000

# === API Timeouts ===
API_CALL_TIMEOUT_SECONDS=10
REQUEST_TIMEOUT_SECONDS=30

# === Development Tools ===
# Sentry (error tracking) - Optional
SENTRY_DSN=

# Database logging (show SQL queries)
SQLALCHEMY_ECHO=true

# === Notes ===
# 1. Never commit real API keys to git
# 2. Use .env.local for personal overrides
# 3. For market data APIs, free tiers are available
# 4. Update ALLOWED_ORIGINS if running frontend on different port
# 5. DEBUG should be false in production
